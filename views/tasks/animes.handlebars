<h1>Animes Disponiveis na sua lista</h1>
<ul class='task-list'>
    {{#if mptyAnimes}}
        <p>Não há tarefas cadastradas</p>
    {{/if}}
    {{#each tasks}}
        <li>
            {{#if this.done}}
                <a href="/tasks/edit/{{this.id}}" class="title done">{{this.anime}}</a>
            {{else}}
                <a href="/tasks/edit/{{this.id}}" class="title">{{this.anime}}</a>
            {{/if}}
            
            <span class="actions">
                <form action="/tasks/done" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <button type="submit">
                        <i class="bi bi-pin-angle-fill"></i>
                        {{!-- <i class="bi bi-patch-check"></i> --}}
                        {{!-- <i class="bi bi-heart-fill"></i> --}}
                        {{!-- <i class="bi bi-hand-thumbs-up"></i> --}}
                    </button>
                </form>

                <a href="/tasks/edit/{{this.id}}">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-person-dash"></i>
                        {{!-- <i class="bi bi-x-lg"></i> --}}
                    </button>
                </form>
            </span>
        </li>
    {{/each}}
</ul>